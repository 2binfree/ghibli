{% extends 'base.html.twig' %}

{% block body %}
    <h1>Movies list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Year</th>
                <th>Summary</th>
                <th>Cover</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td><a href="{{ path('movie_show', { 'id': movie.id }) }}">{{ movie.id }}</a></td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.year }}</td>
                <td>{{ movie.summary }}</td>
                <td>
                    <img class="thumb" src="{{ movie.cover }}">
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('movie_show', { 'id': movie.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {% if page == 1 %}
                <li class="disabled">
                    <span aria-hidden="true">&laquo;</span>
                </li>
            {% else %}
                <li>
                    <a href="{{ path('movie_index', {'page': page - 1 }) }}" aria-label="Next">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            {% endif %}
            {% for i in 1 .. maxPage  %}
                {% if page == i %}
                    <li class="disabled"><span>{{ i }}</span></li>
                {% else %}
                    <li><a href="{{ path('movie_index', {'page': i }) }}">{{ i }}</a></li>
                {% endif %}
            {% endfor %}
            {% if page == maxPage %}
                <li class="disabled">
                    <span aria-hidden="true">&raquo;</span>
                </li>
            {% else %}
                <li>
                    <a href="{{ path('movie_index', {'page': page + 1 }) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endblock %}
