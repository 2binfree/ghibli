{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Movies list</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-4"><h3>Title</h3></div>
        <div class="col-md-1"><h3>Year</h3></div>
        <div class="col-md-4"><h3>Summary</h3></div>
    </div>
    {% for movie in movies %}
        <div class="row">
            <div class="col-md-1"><img class="thumb" src="{{ movie.cover }}"></div>
            <div class="col-md-4">
                <h4><a href="{{ path('movie_show', { 'id': movie.id }) }}">{{ movie.title }}</a></h4>
            </div>
            <div class="col-md-1"><h4>{{ movie.year }}</h4></div>
            <div class="col-md-4"><h4>{{ movie.summary }}</h4></div>

        </div>
    {% endfor %}
    <div class="row text-center">
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-lg">
                {% if page == 1 %}
                    <li class="disabled">
                        <span aria-hidden="true">&laquo;</span>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('movie_index', {'page': page - 1 }) }}" aria-label="Next">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                {% endif %}
                {% for i in 1 .. maxPage  %}
                    {% if page == i %}
                        <li class="disabled"><span>{{ i }}</span></li>
                    {% else %}
                        <li><a href="{{ path('movie_index', {'page': i }) }}">{{ i }}</a></li>
                    {% endif %}
                {% endfor %}
                {% if page == maxPage %}
                    <li class="disabled">
                        <span aria-hidden="true">&raquo;</span>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('movie_index', {'page': page + 1 }) }}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
</div>
{% endblock %}
